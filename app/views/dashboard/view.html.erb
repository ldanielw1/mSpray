<%= Gon::Base.render_data %>

<div class="overlay">
  <div id="map-add-button" style= "inline-block" class="button-overlay xlarge red" data-toggle="collapse" data-target="#collapse-add-options">
    <%= icon('fas', 'plus') %>
  </div>

  <div id="collapse-add-options" class="collapse width" style="width: 0px">

    <div class="toggle-add-malaria-reports button-overlay menu-option">
      <p class="tooltiptext m-tooltiptext">Report Malaria Outbreak</p>
      <%= icon('fas', 'flag') %>
    </div>

    <div class="toggle-add-future-spray-locations button-overlay menu-option">
      <p class="tooltiptext f-tooltiptext">Add Future Spray Location</p>
      <%= icon('fas', 'calendar-plus') %>
    </div>
  </div>

</div>
<div id="map"></div>

<div id="add_report" class="modal fade add_report_modal" role="dialog">
  <div class="modal-dialog modal-md">
    <%= form_for("", html: {class: 'form-horizontal'}, url: "", method: :post) do |f| %>
      <div class="modal-content" style="width: 600px">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">&nbsp;
            <span class="report_title"></span>
          </h4>
        </div>
        <div class="modal-body">
          <h6 class="l-v-bottom-spaced">&nbsp;
            <span class="report_title"></span>
          </h6>
          <p class="l-v-bottom-half-spaced">
            Are you sure you want to add a report at <br>
            LatLng: (&nbsp;
            <span class="report_lat"></span>
            , &nbsp;
            <span class="report_lng"></span>
            )?
          </p>
          <%= f.hidden_field :lat, value: 0, id: "add_report_lat", name: "" %>
          <%= f.hidden_field :lng, value: 0, id: "add_report_lng", name: "" %>
          <%= label_tag(:add_malaria_reports_reporter, "Reporter:") %>
          <%= f.text_field :reporter, value: "", id: "add_report_reporter", name: "" %>
          <br>
          <%= label_tag(:add_malaria_reports_dateTime, "Report Time:") %>
          <%= f.text_field :dateTime, value: "", id: "add_report_dateTime", name: "" %>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Add', class: "button button-danger modal-default" %>
          <button type="button" class="button" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="delete_report" class="modal fade delete_report_modal" role="dialog">
  <div class="modal-dialog modal-md">
    <%= form_for("", html: {class: 'form-horizontal'}, url: "", method: :post) do |f| %>
      <div class="modal-content" style="width: 600px">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">&nbsp;
          <span class="report_title"></span>
          </h4>
        </div>
        <div class="modal-body">
          <h6 class="l-v-bottom-spaced">Delete Report</h6>
          <p class="l-v-bottom-half-spaced">
            Are you sure you want to delete report (ID:&nbsp;
            <span class="report_id"></span>
            ), recorded at&nbsp;
            <span class="report_date"></span>
            ?
          </p>
          <%= f.hidden_field :id, value: 0, id: "delete_report_id", name: "malaria_report[id]" %>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Delete', class: "button button-danger modal-default" %>
          <button type="button" class="button" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
